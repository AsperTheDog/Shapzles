body {
    background-color: #d9d5cc;
    font-family: 'Open Sans', sans-serif;
    margin: 0 auto;
    color: #432A19;
    overflow-x: hidden;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    text-align: center;
    flex-direction: column;
}

header {
    margin: 0 auto;
    width: 100%;
    background-repeat: no-repeat;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 2%;
}

header h2 {
    font-size: 1.2em;
    font-weight: 500;
    color: #432A19;
    padding-bottom: 2%;
    border-bottom: #432A19 solid 1px;
    width: 80%;
}

/* Main */

main {
    text-align: center;
}

main section {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding-bottom: 4%;
}


/*
